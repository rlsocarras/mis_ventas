<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_ventas_viajes_manager" model="res.groups">
            <field name="name">Gestor de Ventas Viajes</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
        </record>
        
        <record id="group_ventas_viajes_user" model="res.groups">
            <field name="name">Usuario de Ventas Viajes</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_ventas_viajes_manager'))]"/>
        </record>
        
        <!-- Reglas de acceso -->
        <record id="ventas_viajes_viaje_rule" model="ir.rule">
            <field name="name">Viajes: Ver todos</field>
            <field name="model_id" ref="model_ventas_viajes_viaje"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>