<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista de Ventas -->
    <record id="view_ventas_viajes_venta_list" model="ir.ui.view">
        <field name="name">ventas.viajes.venta.list</field>
        <field name="model">ventas.viajes.venta</field>
        <field name="arch" type="xml">
            <list string="Ventas">
                <field name="viaje_id"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
                <field name="tipo_pago"/>
                <field name="monto_total"/>
                <field name="fecha"/>
                <field name="es_deuda"/>
            </list>
        </field>
    </record>
    <!-- Vista de formulario de Venta -->
    <record id="view_ventas_viajes_venta_form" model="ir.ui.view">
        <field name="name">ventas.viajes.venta.form</field>
        <field name="model">ventas.viajes.venta</field>
        <field name="arch" type="xml">
            <form string="Venta">
                <sheet>
                    <group>
                        <field name="viaje_id"/>
                    </group>
                    <group>
                        <group>
                            <field name="fecha"/>
                        </group>
                        <group>
                            <field name="monto_total" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="producto_id"/>
                        </group>
                        <group>
                            <field name="cantidad"/>
                        </group>
                    </group>
                    <group>
                        <field name="tipo_pago"/>
                        <field name="es_deuda"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- AcciÃ³n para Ventas -->
    <record id="action_ventas_viajes_venta" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">ventas.viajes.venta</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>