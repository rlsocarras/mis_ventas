<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="pago_deuda_list_view" model="ir.ui.view">
        <field name="name">ventas.pago.deuda.list</field>
        <field name="model">ventas.pago.deuda</field>
        <field name="arch" type="xml">
            <list>
                <field name="deuda_id"/>
                <field name="persona_id"/>
                <field name="fecha_pago"/>
                <field name="monto" widget="monetary"/>
                <field name="tipo_pago"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario MÃNIMA -->
    <record id="pago_deuda_form_view" model="ir.ui.view">
        <field name="name">ventas.pago.deuda.form</field>
        <field name="model">ventas.pago.deuda</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="deuda_id"/>
                        <field name="persona_id" readonly="1"/>
                        <field name="fecha_pago"/>
                        <field name="monto"/>
                        <field name="tipo_pago"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BÃºsqueda -->
    <record id="pago_deuda_search_view" model="ir.ui.view">
        <field name="name">ventas.pago.deuda.search</field>
        <field name="model">ventas.pago.deuda</field>
        <field name="arch" type="xml">
            <search>
                <field name="persona_id"/>
                <field name="deuda_id"/>
                <field name="tipo_pago"/>
                <filter name="filter_este_mes" string="Este Mes" 
                        domain="[('fecha_pago', '&gt;=', context_today().replace(day=1))]"/>
            </search>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_pago_deuda" model="ir.actions.act_window">
        <field name="name">Pagos de Deudas</field>
        <field name="res_model">ventas.pago.deuda</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="pago_deuda_search_view"/>
    </record>
</odoo>