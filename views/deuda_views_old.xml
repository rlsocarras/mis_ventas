<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista de Deudas -->
    <record id="view_ventas_viajes_deuda_list" model="ir.ui.view">
        <field name="name">ventas.viajes.deuda.list</field>
        <field name="model">ventas.viajes.deuda</field>
        <field name="arch" type="xml">
            <list string="Deudas">
                <field name="persona_id"/>
                <field name="viaje_id"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
                <field name="monto"/>
                <field name="fecha_estimada_pago"/>
                <field name="state"/>
                <button name="action_pagar_deuda" string="Pagar" type="object" class="btn-primary"
                        invisible="state != 'pendiente'"/>
                <button name="action_marcar_vencida" string="Marcar Vencida" type="object" class="btn-warning"
                        invisible="state != 'pendiente'"/>
                <button name="action_reabrir_deuda" string="Reabrir" type="object" class="btn-secondary"
                        invisible="state == 'pendiente'"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de formulario de Deuda -->
    <record id="view_ventas_viajes_deuda_form" model="ir.ui.view">
        <field name="name">ventas.viajes.deuda.form</field>
        <field name="model">ventas.viajes.deuda</field>
        <field name="arch" type="xml">
            <form string="Deuda">
                <header>
                    <button name="action_pagar_deuda" string="Pagar Deuda" type="object" class="btn-primary"
                            invisible="state != 'pendiente'"/>
                    <button name="action_marcar_vencida" string="Marcar como Vencida" type="object" class="btn-warning"
                            invisible="state != 'pendiente'"/>
                    <button name="action_reabrir_deuda" string="Reabrir Deuda" type="object" class="btn-secondary"
                            invisible="state == 'pendiente'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="persona_id"/>
                            <field name="viaje_id"/>
                            <field name="producto_id"/>
                        </group>
                        <group>
                            <field name="cantidad"/>
                            <field name="monto" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="fecha"/>
                            <field name="fecha_estimada_pago"/>
                            <field name="fecha_pago"/>
                        </group>
                        <group>
                            <field name="state" widget="statusbar" statusbar_visible="pendiente,pagada,vencida"/>
                            <field name="venta_id"/>
                        </group>
                    </group>
                    
                   
                </sheet>
            </form>
        </field>
    </record>
    
