                <group expand="0" string="Agrupar por">
                    <filter string="Estado" context="{'group_by': 'state'}"/>
                    <filter string="Persona" context="{'group_by': 'persona_id'}"/>
                    <filter string="Viaje" context="{'group_by': 'viaje_id'}"/>
