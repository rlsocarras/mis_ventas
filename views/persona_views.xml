<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="persona_list_view" model="ir.ui.view">
        <field name="name">ventas.persona.list</field>
        <field name="model">ventas.persona</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre" width="150px"/>
                <field name="contacto" width="150px"/>
                <field name="total_deudas" sum="Total deudas" width="150px"/>
                <field name="total_deuda_pendiente" sum="Total deuda pendiente" width="150px"/>
            </list>
        </field>
    </record>
    <!-- Vista Canvas (Kanban) para Odoo 18 -->
    <record id="persona_kanban_view" model="ir.ui.view">
        <field name="name">ventas.persona.kanban</field>
        <field name="model">ventas.persona</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nombre"/>
                <field name="contacto"/>
                <field name="total_deudas"/>
                <field name="total_deuda_pendiente"/>
                <field name="deudas_ids" />
                <field name="deudas_tags_text" />
                <templates>
                    <t t-name="kanban-box">
                        <!-- Contenedor principal -->
                        <div class="oe_kanban_global_click o_kanban_card bg-info">
                            <!-- Encabezado con información básica -->
                            <div class="o_kanban_record_top mb-2">
                                <strong>
                                    <h2>
                                        <t t-out="record.nombre.value"/>
                                    </h2>
                                </strong>
                            </div>
                            <!-- Información de contacto -->
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fa fa-phone me-1"/>Contacto:
                                    <span t-out="record.contacto.value"/>
                                </small>
                            </div>
                            <!-- Tarjetas para mostrar deudas -->
                            <div class="row g-2">
                                <!-- Total deudas -->
                                <div class="col-6">
                                    <div class="card border-info">
                                        <div class="card-body p-2 text-center">
                                            <small class="text-muted">Total Deudas</small>
                                            <h6 class="mb-0" t-out="record.total_deudas.value"/>
                                        </div>
                                    </div>
                                </div>
                                <!-- Deuda pendiente con lógica condicional sin t-if -->
                                <div class="col-6">
                                    <div t-att-class="'card ' + (record.total_deuda_pendiente.raw_value > 0 ? 'bg-danger' : 'bg-success')">
                                        <div class="card-body p-2 text-center ">
                                            <small class="text-white">Pendiente</small>
                                            <h6 class="mb-0 text-white" t-out="record.total_deuda_pendiente.value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Sección de deudas - usando field con widget kanban -->
                            <div class="kanban-deudas-section">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted fw-bold">
                                        <i class="fa fa-list me-1"></i>Deudas
                                    </small>
                                    <small class="text-muted">
                                        <t t-out="record.deudas_ids.count or 0"/>
                                    </small>
                                </div>
                                <div class="tags-container">
                                    <field name="deudas_tags_text" widget="html"/>
                                </div>
                            </div>
                            <!-- Estilos adicionales -->
                            <t t-name="kanban-box-style">
                                <style>
                            .kanban-deudas-section {
                                min-height: 60px;
                            }
                            
                            .oe_kanban_card {
                                min-height: 280px;
                            }
                            
                            /* Contenedor de etiquetas */
                            .custom-deudas-tags .o_field_many2many_tags {
                                display: flex;
                                flex-wrap: wrap;
                                gap: 4px;
                                max-height: 120px;
                                overflow-y: auto;
                                padding: 8px;
                                background-color: #f8f9fa;
                                border-radius: 4px;
                                border: 1px solid #dee2e6;
                            }
                            
                            /* Estilos generales para etiquetas */
                            .custom-deudas-tags .badge {
                                font-size: 0.7em;
                                padding: 4px 8px;
                                margin: 2px;
                                display: flex;
                                align-items: center;
                                max-width: 100%;
                                word-break: break-word;
                            }
                            
                            /* COLORES SEGÚN ESTADO */
                            
                            /* Pendiente - Rojo */
                            .custom-deudas-tags .badge[data-color='10'],
                            .custom-deudas-tags .badge.o_tag_color_10 {
                                background-color: #dc3545 !important;
                                color: white !important;
                                border-color: #dc3545 !important;
                            }
                            
                            /* Parcial - Naranja/Ambar */
                            .custom-deudas-tags .badge[data-color='3'],
                            .custom-deudas-tags .badge.o_tag_color_3 {
                                background-color: #fd7e14 !important;
                                color: white !important;
                                border-color: #fd7e14 !important;
                            }
                            
                            /* Pagado - Verde */
                            .custom-deudas-tags .badge[data-color='1'],
                            .custom-deudas-tags .badge.o_tag_color_1 {
                                background-color: #198754 !important;
                                color: white !important;
                                border-color: #198754 !important;
                            }
                            
                            /* Vencida - Rojo oscuro */
                            .custom-deudas-tags .badge[data-color='9'],
                            .custom-deudas-tags .badge.o_tag_color_9 {
                                background-color: #8b0000 !important;
                                color: white !important;
                                border-color: #8b0000 !important;
                            }
                            
                            /* Otros estados - Gris */
                            .custom-deudas-tags .badge:not([data-color]) {
                                background-color: #6c757d !important;
                                color: white !important;
                                border-color: #6c757d !important;
                            }
                            
                            /* Iconos dentro de las etiquetas */
                            .custom-deudas-tags .badge i {
                                margin-right: 4px;
                                font-size: 0.8em;
                            }
                            
                            /* Texto dentro de las etiquetas */
                            .custom-deudas-tags .badge span {
                                white-space: normal;
                                line-height: 1.2;
                            }
                                </style>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Vista Formulario -->
    <record id="persona_form_view" model="ir.ui.view">
        <field name="name">ventas.persona.form</field>
        <field name="model">ventas.persona</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="contacto"/>
                        <field name="total_deudas" widget="monetary" readonly="1"/>
                        <field name="total_deuda_pendiente" widget="monetary" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Deudas">
                            <field name="deudas_ids">
                                <list>
                                    <field name="viaje_producto_id"/>
                                    <field name="monto_total" widget="monetary"/>
                                    <field name="monto_pendiente" widget="monetary"/>
                                    <field name="estado" widget="badge"
                                            decoration-success="estado=='pagado'"
                                            decoration-warning="estado=='parcial'"
                                            decoration-danger="estado == 'pendiente' or estado == 'vencida'"/>
                                    <field name="fecha_estimada_pago"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Búsqueda -->
    <record id="persona_search_view" model="ir.ui.view">
        <field name="name">ventas.persona.search</field>
        <field name="model">ventas.persona</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="contacto"/>
                <filter name="filter_con_deuda" string="Con Deuda" 
                        domain="[('total_deudas', '>', 0)]"/>
            </search>
        </field>
    </record>
    <!-- Acción -->
    <record id="action_persona" model="ir.actions.act_window">
        <field name="name">Personas</field>
        <field name="res_model">ventas.persona</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="persona_search_view"/>
    </record>
</odoo>